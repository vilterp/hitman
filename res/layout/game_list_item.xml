<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:id="@+id/game_list_item_name"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text="Game Name"
                  style="@android:style/TextAppearance.DeviceDefault.SearchResult.Title"
                  android:layout_gravity="left"/>

        <TextView
            android:id="@+id/game_list_item_startdate"
            style="@android:style/TextAppearance.DeviceDefault.SearchResult.Subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="Tomorrow at 12am" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView android:id="@+id/game_list_item_players"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text="Player1, Player2, Player3 ...."
                  android:gravity="right"
                  style="@android:style/TextAppearance.DeviceDefault.SearchResult.Subtitle"
                  android:layout_gravity="right"/>

        <TextView
            android:id="@+id/game_list_item_location"
            style="@android:style/TextAppearance.DeviceDefault.SearchResult.Subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="lat,long" />

    </LinearLayout>
</LinearLayout>
