<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.androidsofdeath.client"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="17"/>

    <!-- TODO: get rid of mapview stuff -->

    <!-- permission for MapView -->
    <permission android:name="org.androidsofdeath.permission.MAPS_RECEIVE"
                android:protectionLevel="signature"/>
    <uses-permission android:name="org.androidsofdeath.permission.MAPS_RECEIVE"/>

    <!-- moar permissions for MapView -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <!-- permissions for GCM -->
    <permission android:name="org.androidsofdeath.client.permission.C2D_MESSAGE" android:protectionLevel="signature" />
    <uses-permission android:name="org.androidsofdeath.client.permission.C2D_MESSAGE" />

    <!-- moar permissions for GCM -->
    <!-- App receives GCM messages. -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <!-- GCM requires a Google account. -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <!-- Keeps the processor from sleeping when a message is received. -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- require OpenGL -->
    <uses-feature
      android:glEsVersion="0x00020000"
      android:required="true"/>

    <application android:label="@string/app_name" android:icon="@drawable/ic_launcher">

        <!-- maps API key -->
        <meta-data android:name="com.google.android.maps.v2.API_KEY"
                   android:value="AIzaSyCaPG-JeuZISQxOjC5kFFadvRZg9TzyzBM"/>

        <activity android:name=".activity.GameMap"
                  android:label="@string/app_name">
        </activity>

        <activity android:name=".activity.Login"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activity.SignUp">
        </activity>

        <activity android:name=".activity.LoggingIn" />

        <receiver android:name="com.google.android.gcm.GCMBroadcastReceiver" android:permission="com.google.android.c2dm.permission.SEND" >
          <intent-filter>
            <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
          </intent-filter>
        </receiver>

        <service android:name=".activity.GCMIntentService" />

    </application>
</manifest>
